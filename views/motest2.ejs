								$('#sub1').val('');
								return false;
							}
						}
					var formData = new FormData(this);
					console.log('uploading');

					$.ajax({
						type: "POST",
						url: '/maths/submissiona',
						data: formData, 
						cache: false,
						contentType: false,
						processData: false,
						success: function(result)
						{
							if(result == 'success'){
								new swal({
									title: 'Success',
